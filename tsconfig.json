{
  "compilerOptions": {
    "target": "ES6",           // Modern JavaScript target
    "module": "ESNext",        // Use ES Modules instead of CommonJS
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
